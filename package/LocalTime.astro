---
import Import from './Import.astro';

export interface Props {
  datetime?: Date | string;
  year?: "2-digit" | "numeric";
  month?: "short" | "long";
  day?: "2-digit" | "numeric";
  weekday?: "short" | "long";
  hour?: "2-digit" | "numeric";
  minute?: "2-digit" | "numeric";
  second?: "2-digit" | "numeric";
  'time-zone-name'?: "short" | "long";
  date?: boolean;
  time?: boolean;
}

const {
  class:className,
  datetime=new Date,
  date,
  time,
  ...attrs
} = Astro.props

const calc_attrs = {
  ...(date?{
      year: "numeric",
      month: "short",
      day: "numeric"
  }:null),
  ...(time?{
      hour: "2-digit",
      minute: "2-digit",
      second: "2-digit"
  }:null),
  ...attrs
}
---

<Import />

<local-time
  class:list={className}
  datetime={(datetime instanceof Date)?datetime.toISOString():datetime}
  {...calc_attrs}
>
  <slot />
</local-time>