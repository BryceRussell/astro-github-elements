---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
    datetime: Date | string;
    micro?: boolean;
}

const {
  datetime,
  micro,
  ...attrs
} = Astro.props

const calc_attrs = {
    format: micro?"micro":null,
    ...attrs
}
---

<script>
  import { TimeAgoElement } from '@github/time-elements'
  window.customElements.define('time-ago', TimeAgoElement);
</script>

<time-ago
  datetime={(datetime instanceof Date)?datetime.toISOString():datetime}
  {...calc_attrs}
>
  <slot />
</time-ago>